#include <physical_layouts.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zephyr,display = &oled;
        zmk,kscan = &kscan0;
    };

    matrix_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
                        RC(3,2) RC(3,3) RC(3,4)  RC(3,5) RC(3,6) RC(3,7)
        >;
    };
    
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

    };

    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Temper";

        kscan = <&kscan0>;
        transform = <&matrix_transform0>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100    0  106       0     0     0>
            , <&key_physical_attrs 100 100  100   35       0     0     0>
            , <&key_physical_attrs 100 100  200    0       0     0     0>
            , <&key_physical_attrs 100 100  300   39       0     0     0>
            , <&key_physical_attrs 100 100  400   53       0     0     0>
            , <&key_physical_attrs 100 100  893   53       0     0     0>
            , <&key_physical_attrs 100 100  993   39       0     0     0>
            , <&key_physical_attrs 100 100 1093    0       0     0     0>
            , <&key_physical_attrs 100 100 1193   35       0     0     0>
            , <&key_physical_attrs 100 100 1293  106       0     0     0>
            , <&key_physical_attrs 100 100    0  206       0     0     0>
            , <&key_physical_attrs 100 100  100  135       0     0     0>
            , <&key_physical_attrs 100 100  200  100       0     0     0>
            , <&key_physical_attrs 100 100  300  139       0     0     0>
            , <&key_physical_attrs 100 100  400  153       0     0     0>
            , <&key_physical_attrs 100 100  893  153       0     0     0>
            , <&key_physical_attrs 100 100  993  139       0     0     0>
            , <&key_physical_attrs 100 100 1093  100       0     0     0>
            , <&key_physical_attrs 100 100 1193  135       0     0     0>
            , <&key_physical_attrs 100 100 1293  206       0     0     0>
            , <&key_physical_attrs 100 100    0  306       0     0     0>
            , <&key_physical_attrs 100 100  100  235       0     0     0>
            , <&key_physical_attrs 100 100  200  200       0     0     0>
            , <&key_physical_attrs 100 100  300  239       0     0     0>
            , <&key_physical_attrs 100 100  400  253       0     0     0>
            , <&key_physical_attrs 100 100  893  253       0     0     0>
            , <&key_physical_attrs 100 100  993  239       0     0     0>
            , <&key_physical_attrs 100 100 1093  200       0     0     0>

            , <&key_physical_attrs 100 100 1293  306       0     0     0>
            , <&key_physical_attrs 100 100  267  356       0     0     0>
            , <&key_physical_attrs 100 100  379  372    1500   429   422>
            , <&key_physical_attrs 100 100  493  390    3000   543   440>
            , <&key_physical_attrs 100 100  800  390 (-3000)   850   440>
            , <&key_physical_attrs 100 100  914  372 (-1500)   964   422>
            , <&key_physical_attrs 100 100 1026  356       0     0     0>
            ;
    };
};

&pro_micro_i2c {
    status = "okay";

    oled: ssd1306@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3c>;
        label = "DISPLAY";
        width = <128>;
        height = <32>;
        segment-offset = <0>;
        page-offset = <0>;
        display-offset = <0>;
        multiplex-ratio = <31>;
        segment-remap;
        com-invdir;
        com-sequential;
        prechargep = <0x22>;
    };
};